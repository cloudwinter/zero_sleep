/**main.wxss**/
.page-dark .tab-bar {
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  background-color: #0E0F12;
  border-top:1px solid #17181D;
  z-index:500;
}

.page-orange .tab-bar{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  background-color: #6B05AC;
  z-index:500;
}
.tab-bar .tab-item{
  float:left;
  width: 25%;
  text-align: center;
  padding-top:2px;
  font-size: 0;
}

.tab-bar .tab-item .icons{
  font-size:27px;
  color:#808080;
  font-weight:800;
}
.tab-bar .tab-item .icon-text{
  font-size:10px;
  display: block;
  line-height:2.1;
  color:white;
}
.tab-bar .active .icons{
  color:#000;

}
.page-dark .tab-bar .active .icon-text{
  color:#59B84D;
}

.page-orange .tab-bar .active .icon-text{
  color:#FF9704;
}


.tabbar_icon {
  display: inline-block;
  width: 28px;
  height: 28px;
}

i.tabbar_icon,
.tabbar_icon>i {
  font-size: 24px;
  color: rgba(0, 0, 0, 0.5)
}

.tabbar_icon image {
  width: 100%;
  height: 100%
}

.tab-container {
  width: 100%;
  height: 100%;
}