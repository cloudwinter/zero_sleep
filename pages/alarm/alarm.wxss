}

.button-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.button-name {
  margin-left: 5rpx;
}


.radio {
  display: block;
  padding: 5px;
  width: 100%;
}

/** 复选框 */
.dark .wx-switch-input{
  width:88rpx !important;
  height:44rpx !important;
  background: #59B84D !important;
  border: #59B84D !important; /* 2018-07-18 重置开关边框颜色 */
}

.orange .wx-switch-input{
  width:88rpx !important;
  height:44rpx !important;
  background: #FF9704 !important;
  border: #FF9704 !important; /* 2018-07-18 重置开关边框颜色 */
}

/*白色样式（false的样式）*/
.wx-switch-input::before{
  width:88rpx !important;
  height: 44rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
  width: 48rpx !important;
  height: 44rpx !important;
}

/** 对话框 */
.sure {
  color:green;
}


