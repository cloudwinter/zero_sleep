/** 对话框设置 */
.modal-dialog {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: column;
  right: 0rpx;
  bottom: 0rpx;
  background: rgba(0, 0, 0, 0.7);
  overflow: hidden;
  justify-content: center;
  align-items: center;
}

.modal-dialog-close{
  width: 64rpx;
  height: 64rpx;
  margin-top: 80rpx;
}

.modal-box {
  width: 80%;
  background: #2B2D36;
  box-shadow: 0 2px 25px 0 rgba(0, 0, 0, 0.06);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-box-title {
  font-size: 40rpx;
  margin-top: 30rpx;
  color: #FFFFFF;
}

.modal-box-desc {
  font-size: 30rpx;
  color: #999;
  margin-top: 30rpx;
}

.modal-box-input {
  width: 90%;
  margin-top: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
  border-radius: 4px;
  border: 1px solid #EEEEEE;
  height: 100rpx;
}

.modal-box-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-right-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
  width: 100%;
  overflow: hidden;
}

.modal-box-button {
  font-size: 40rpx;
  text-align: center;
  width: 100%;
  height: 100%;
  line-height: 100rpx;
  background-color: #2B2D36;
}

.modal-box-button-hover {
  background-color: #2B2D36;
}

.hover-class{
  background-color: #2B2D36;
}


