.layer {
  display: flex;
  height: 120rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
}


.layer .button {
  width: 400rpx;
  height: 90rpx;
  border-radius: 90rpx;
  display: flex;
  align-items: center;
}

.layer .button .dian{
  width: 28rpx;
  height: 28rpx;
  padding-left: 52rpx;
}

.layer .button .name {
  color: white;
  padding-left: 40rpx;
}

.layer .button-left {
  flex: 1;
  color: #ffffff;
  margin-left: 62rpx;
}

.layer .button-right {
  display: flex;
  align-items: center;
  margin-right: 50rpx;
}

.layer .button-name {
  color: #ffffff;
}

.layer .button-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}



