/********* 按摩类型 ************** */
.anmo-type {
  width: 100%;
  margin-top: 17rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.anmo-content {
  width: 90%;
  height: 120rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.anmo-button-bg {
  width: 90% !important;
  height: 120rpx;
  border-radius: 120rpx;
  background: #1E1F24;
  /* position: absolute;
  z-index: -1; */
}

.anmo-button-top {
  width: 100%;
  flex: auto;
  display: flex;
  align-items: center;
}

.anmo-button-top-left {
  width: 90rpx;
  height: 100%;
  padding-left: 80rpx;
  display: flex;
  align-items: center;
}

.anmo-button-icon {
  width: 45rpx;
  height: 45rpx;
}

.anmo-button-top-right {
  width: 90rpx;
  height: 100%;
  padding-right: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}

.anmo-button-top-middle {
  flex: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.anmo-button-bottom {
  width: 85%;
  display: flex;
  height: 4px;
}

.line10 {
  width: 9.4%;
  height: 4rpx;
  background: #05BF74;
  border-radius: 4rpx;
  margin-right: 2rpx;
}


.anmo-type-icon{
  width: 39rpx;
  height: 39rpx;
}

.anmo-type-name {
  color: white;
  font-size: 26rpx;
  margin-left: 19rpx;
}

.layer {
  display: flex;
  height: 120rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
}


.layer .button {
  width: 400rpx;
  height: 90rpx;
  border-radius: 90rpx;
  display: flex;
  align-items: center;
}

.layer .button .dian{
  width: 28rpx;
  height: 28rpx;
  padding-left: 52rpx;
}

.layer .button .name {
  color: white;
  padding-left: 40rpx;
}

.layer .button-left {
  flex: 1;
  color: #ffffff;
  margin-left: 62rpx;
}

.layer .button-right {
  display: flex;
  align-items: center;
  margin-right: 50rpx;
}

.layer .button-name {
  color: #ffffff;
}

.layer .button-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}
